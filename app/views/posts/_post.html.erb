<div id="<%= dom_id post %>">
  <p class="my-5">
    <strong class="font-medium mb-1">Title:</strong>
    <%= post.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= post.description %>
  </p>

  <p class="my-5">
    <strong class="font-medium mb-1">Published at:</strong>
    <%= post.published_at %>
  </p>

  <% if user_signed_in? %>
    <p class="my-5">
      <strong class="font-medium mb-1">Status:</strong>
      <%= post.status %>
    </p>
  <% end %>

  <p class="my-5">
    <strong class="font-medium mb-1">Author:</strong>
    <%= post.user.email %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this blog", post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    
    <% if user_signed_in? && current_user.email == post.user.email %>
      <%= link_to 'Edit this post', edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
    
    <hr class="mt-6">
  <% end %>
</div>
