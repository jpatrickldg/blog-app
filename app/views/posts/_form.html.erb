<div>
  <%= form_with model: @post, data:{turbo:false}, local: true do |f| %>
    <% if @post.errors.any? %>
      <div class="w-full p-2 rounded-lg mb-2 text-red-500 bg-red-200 font-medium">
        <% @post.errors.full_messages.each do |error| %>
          <div><%= error %></div>
        <% end %>
      </div>
    <% end %>

    <div class="mb-2">
      <%= f.label :title, class: 'block font-medium' %>
      <%= f.text_field :title, class: "w-full block border rounded-lg border-gray-300 focus:ring-gray-500 focus:border-gray-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :banner, class: 'block mb-1 font-medium text-gray-900' %>
      <%= f.file_field :banner, class: 'block w-full text-gray-900 rounded-lg border border-gray-300 cursor-pointer focus:outline-none file:bg-gray-200 file:rounded-lg file:hover:cursor-pointer file:hover:bg-gray-300 file:border-none file:p-2 file:rounded-r-none file:px-4' %>
    </div>

    <div class="mb-4">
      <%= f.label :body, class: 'block font-medium' %>
      <%= f.rich_text_area :body, class: 'border-gray-300 rounded-lg focus:ring-gray-500 focus:border-gray-500' %>
    </div>

    <div class="flex gap-2 items-center">
      <%= f.submit class: 'block py-1.5 px-4 font-medium text-center text-white bg-gray-900 hover:bg-gray-700 rounded-lg focus:ring-4 focus:ring-blue-200 hover:cursor-pointer' %>

      <%= link_to 'Cancel', root_path, class: 'block py-1.5 px-4 font-medium text-center text-white bg-gray-900 hover:bg-gray-700 rounded-lg focus:ring-4 focus:ring-blue-200 hover:cursor-pointer w-fit' %>
    </div>
  <% end %>
</div>